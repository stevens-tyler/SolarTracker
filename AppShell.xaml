<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SolarTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:SolarTracker.View">

    <TabBar>

        <Tab Title="Home"
             Icon="home.svg">

            <ShellContent 
                Title="Day"
                ContentTemplate="{DataTemplate view:DayPage}"/>

            <ShellContent 
                Title="Week"
                ContentTemplate="{DataTemplate view:WeekPage}"/>

            <ShellContent 
                Title="Month"
                ContentTemplate="{DataTemplate view:MonthPage}"/>

        </Tab>

        <ShellContent 
            Title="About"
            Icon="info.svg"
            ContentTemplate="{DataTemplate view:AboutPage}"/>

    </TabBar>

</Shell>

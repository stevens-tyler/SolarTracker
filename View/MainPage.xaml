<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    
    BackgroundColor="WhiteSmoke"
    x:Class="SolarTracker.View.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:SolarTracker.Model"
    xmlns:viewmodel="clr-namespace:SolarTracker.ViewModel"
    x:DataType="viewmodel:UserViewModel"
    Title="Users">


    <Grid
        Background="White"
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        RowSpacing="0">
        <CollectionView
            Grid.ColumnSpan="2"
            ItemsSource="{Binding Users}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:User">
                    <Grid      
                        Padding="10">
                        <Frame
                            
                            Background="white"
                            HeightRequest="125">
                            
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:UserViewModel}}, Path=GoToDetailsCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid Padding="0" ColumnDefinitions="125,*">
                                <Image Source="logo.png"
                                       />
                                <VerticalStackLayout
                                    VerticalOptions="Center"
                                    Grid.Column="1"
                                    Padding="10">
                                    <Label TextColor="#3A7FCC" Text="{Binding FirstName}" />
                                    <Label TextColor="#3A7FCC" Text="{Binding Email}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Get Users from Database"
                BackgroundColor="LightGray"
                TextColor="Black"
                Command="{Binding GetUsersCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="1"
                Grid.Column="0"
                Margin="8"/>


        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>
    </Grid>






</ContentPage>
